{
  "name": "مُعين Platform",
  "version": "2.0.0",
  "description": "منصة حفظ وتقييم القرآن الكريم بالذكاء الاصطناعي",
  "main": "node app.js",
  "scripts": {
    "build": "echo 'Building backend...' && cd backend && npm install && npm run build",
    "build:frontend": "echo 'Building frontend...' && cd frontend && npm install && npm run build",
    "build:all": "npm run build && npm run build:frontend",
    "start": "node backend/app.js",
    "start:prod": "NODE_ENV=production node backend/app.js",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "deploy": "npm run build:all",
    "postinstall": "npm run build:all"
  },
  "dependencies": {
    "concurrently": "^9.0.0",
    "dotenv": "^16.4.5",
    "axios": "^1.6.8",
    "@google/generative-ai": "^0.2.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^6.9.7",
    "multer": "^1.4.5",
    "pg": "^8.11.3",
    "cors": "^2.8.5",
    "helmet": "^7.1.1",
    "express": "^4.18.2",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "joi": "^17.9.2",
    "uuid": "^9.0.1",
    "ts-node": "^20.10.5",
    "typescript": "^5.3.3"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "ts-node": "^20.10.5",
    "@types/node": "^20.10.5",
    "@types/pg": "^8.11.3",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11",
    "@types/morgan": "^1.10.0",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.0.0",
    "@tailwindcss/postcss": "^4.0.3",
    "autoprefixer": "^10.4.19",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.4.1",
    "prettier": "^3.0.3",
    "prettier-plugin-tailwindcss": "^0.6.5",
    "typescript-eslint": "^7.5.0",
    "eslint-config-prettier": "^9.0.0"
  },
  "engines": {
    "node": "20.x"
  }
}